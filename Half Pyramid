*
*   Prints a half pyramid with a height of up to 23 #
*
*******/
#include <stdio.h>
#include <cs50.h>

int main(void) {

int n;

do
{
    printf("Enter in a number between 0 and 23: ");
    n = get_int();
}

while(n<0&&n>23);

for (int i=0; i<n;i++)
{
    for(int spaces = n - i; spaces >1; spaces--)
    {
        printf(" ");
    }

    for(int hashes = 0; hashes < i + 2;hashes++)
    {
        printf("#");
    }
    printf("\n");
}
}
